{
  "name": "noty",
  "productName": "Noty",
  "version": "1.3.0",
  "description": "Autosaving sticky note with support for multiple notes, find/replace, programmers shortcuts and more.",
  "main": "dist/main.js",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:releases": "rimraf releases",
    "clean": "npm-run-all -p clean:dist clean:releases",
    "build:main": "webpack --config webpack/main.ts",
    "build:renderer": "webpack --config webpack/renderer/index.ts",
    "build:server": "webpack --config webpack/server.ts",
    "build:all": "npm-run-all -p build:main build:renderer build:server",
    "start:main": "webpack --config webpack/main.ts --watch & nodemon --watch dist/main.js --exec 'electron dist/main.js'",
    "start:server": "webpack --config webpack/renderer/index.ts --watch & node dist/server.js",
    "start:prod": "open releases/Noty-darwin-x64/Noty.app",
    "start": "HOT=1 npm-run-all -p start:main start:server",
    "dev": "npm-run-all clean build:all start",
    "package": "node package.js",
    "dmg": "cd releases/Noty-darwin-x64 && create-dmg Noty.app",
    "prod": "NODE_ENV=production npm-run-all clean build:all package dmg"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "homepage": "https://github.com/fabiospampinato/noty",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/noty"
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/noty/issues"
  },
  "keywords": [
    "electron",
    "react",
    "webpack",
    "codemirror",
    "sticky",
    "note"
  ],
  "dependencies": {
    "electron-about-window": "^1.6.1",
    "electron-context-menu": "^0.9.1",
    "electron-is": "^2.4.0",
    "electron-localshortcut": "^2.0.2",
    "electron-store": "^1.2.0",
    "electron-window-state": "^4.1.1",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "open": "0.0.5",
    "react": "^15.6.1",
    "react-codemirror2": "0.0.13",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.2.2",
    "chalk": "^2.0.1",
    "conf-merge": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "create-dmg": "^1.3.0",
    "css-loader": "^0.28.4",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-debug": "^1.3.0",
    "electron-devtools-installer": "^2.2.0",
    "electron-packager": "^8.7.2",
    "express": "^4.15.3",
    "extract-loader": "^1.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.0",
    "isomorphic-style-loader": "^3.0.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2",
    "typings": "^2.1.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.4.1",
    "webpack-bundle-analyzer": "^2.8.3",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.6.1",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-node-externals": "^1.6.0",
    "webpack-summary": "^1.1.0"
  }
}
